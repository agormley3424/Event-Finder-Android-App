<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:background="@color/black"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Artist / Teams"
                android:theme="@style/whiteTextTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.103"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/detailArtists"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Artist Info Heeeeeeeeeeeeeeeeeeeere"
                android:textAlignment="center"
                android:theme="@style/greenTextTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.912"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/detailVenue"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Venue Info Here"
                android:theme="@style/greenTextTheme"
                app:layout_constraintEnd_toEndOf="@id/detailArtists"
                app:layout_constraintHorizontal_bias="0.481"
                app:layout_constraintStart_toStartOf="@id/detailArtists"
                app:layout_constraintTop_toBottomOf="@id/detailArtists" />

            <TextView
                android:id="@+id/detailDate"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Date Info Here"
                android:theme="@style/greenTextTheme"
                app:layout_constraintEnd_toEndOf="@+id/detailVenue"
                app:layout_constraintHorizontal_bias="0.818"
                app:layout_constraintStart_toStartOf="@+id/detailVenue"
                app:layout_constraintTop_toBottomOf="@+id/detailVenue" />

            <TextView
                android:id="@+id/detailTime"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Time Info Here"
                android:theme="@style/greenTextTheme"
                app:layout_constraintEnd_toEndOf="@+id/detailDate"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/detailDate"
                app:layout_constraintTop_toBottomOf="@+id/detailDate" />

            <TextView
                android:id="@+id/detailGenres"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Genre Info Here"
                android:theme="@style/greenTextTheme"
                app:layout_constraintEnd_toEndOf="@+id/detailTime"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/detailTime"
                app:layout_constraintTop_toBottomOf="@+id/detailTime" />

            <TextView
                android:id="@+id/detailPrice"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Price Info Here"
                android:theme="@style/greenTextTheme"
                app:layout_constraintEnd_toEndOf="@+id/detailGenres"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toStartOf="@+id/detailGenres"
                app:layout_constraintTop_toBottomOf="@+id/detailGenres" />

            <TextView
                android:id="@+id/detailStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/green"
                android:text="Ticket Info Here"
                android:textColor="@color/white"
                android:theme="@style/greenTextTheme"
                app:layout_constraintEnd_toEndOf="@+id/detailPrice"
                app:layout_constraintHorizontal_bias="0.428"
                app:layout_constraintStart_toStartOf="@+id/detailPrice"
                app:layout_constraintTop_toBottomOf="@+id/detailPrice" />

            <TextView
                android:id="@+id/detailBuyAt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColorLink="@color/green"
                android:colorAccent="@color/green"
                android:linksClickable="true"
                android:text="http://www.example.com"
                android:theme="@style/marquee"
                app:layout_constraintEnd_toEndOf="@+id/detailStatus"
                app:layout_constraintHorizontal_bias="0.446"
                app:layout_constraintStart_toStartOf="@+id/detailStatus"
                app:layout_constraintTop_toBottomOf="@+id/detailStatus"
                tools:visibility="visible" />

            <!--                android:clickable="true"-->
            <!--                android:linksClickable="true"-->
            <!--                android:textColorLink="@color/green"-->

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="176dp"
                android:text="Genres"
                android:theme="@style/whiteTextTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.09"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:text="Venue"
                android:theme="@style/whiteTextTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.089"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="136dp"
                android:text="Time"
                android:theme="@style/whiteTextTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.09"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewWhatever"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="96dp"
                android:text="Date"
                android:theme="@style/whiteTextTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.089"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="216dp"
                android:text="Price Range"
                android:theme="@style/whiteTextTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.103"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="256dp"
                android:text="Ticket Status"
                android:theme="@style/whiteTextTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.103"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="296dp"
                android:text="Buy Tickets At"
                android:theme="@style/whiteTextTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.103"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/detailImage"
                android:layout_width="331dp"
                android:layout_height="290dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                app:srcCompat="@drawable/bertie" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</ScrollView>