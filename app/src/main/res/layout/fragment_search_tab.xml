<?xml version="1.0" encoding="utf-8"?>

<!--Sourced from 'https://medium.com/@royanimesh2211/swipeable-tab-layout-using-view-pager-and-fragment-in-android-ea62f839502b' -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="332dp"
        android:layout_height="571dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="48dp"
        android:background="@color/black"
        android:visibility="visible">

        <EditText
            android:id="@+id/keywordInput"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="480dp"
            android:layout_weight="1"
            android:backgroundTint="@color/green"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/keywordInput3"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="210dp"
            android:layout_weight="1"
            android:backgroundTint="@color/green"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/keywordInput2"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="388dp"
            android:layout_weight="1"
            android:backgroundTint="@color/green"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <TextView
            android:id="@+id/keywordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="17dp"
            android:text="Keyword*"
            android:textColor="@color/green"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/keywordText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="199dp"
            android:text="Category*"
            android:textColor="@color/green"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/keywordText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="287dp"
            android:text="Location*"
            android:textColor="@color/green"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/keywordText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="109dp"
            android:text="Distance (Miles)*"
            android:textColor="@color/green"
            android:textSize="20sp" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="169dp"
            android:layout_marginBottom="161dp"
            android:backgroundTint="@color/green"
            android:clickable="true"
            android:text="Search"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/searchButton2"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="161dp"
            android:backgroundTint="#F3642B"
            android:clickable="true"
            android:text="Clear"
            android:textColor="@color/white" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/keywordInput2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="-130dp"
            android:backgroundTint="@color/green"
            android:entries="@array/categories"
            android:popupBackground="@color/black"
            android:spinnerMode="dropdown"
            android:theme="@style/spinnerTheme" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="257dp"
            android:text="Auto-detect"
            android:textColor="@color/grey" />

    </RelativeLayout>

    <TextView
        android:id="@+id/outputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="602dp"
        android:text="Your output here"
        android:textColor="@color/green" />

</RelativeLayout>